<Window x:Class="PracticaGestionJugadores.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PracticaGestionJugadores"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_Jugador">
                <MenuItem Header="_Nuevo" />
                <MenuItem Header="_Modificar" />
                <MenuItem Header="_Borrar" />
                <Separator />
                <MenuItem Header="_Exit" />
            </MenuItem>
        </Menu>
        <DataGrid x:Name="dgListaJugadores" HorizontalAlignment="Left" Height="360" Margin="192,21,0,0" VerticalAlignment="Top" Width="590"
                  ItemsSource="{Binding}" AutoGenerateColumns="True"/>

    </DockPanel>
</Window>
